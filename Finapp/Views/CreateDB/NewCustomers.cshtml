@model Finapp.ViewModels.DBSummaryViewModel
@{
    ViewBag.Title = "AddNewCustomers";
}

<div class="text-center">
    <br/><br/>
    <h2>Set attributes</h2>
    @if (ViewBag.ErrorMessage != null)
    {
        <p class="alert-danger">@ViewBag.ErrorMessage</p>
    }
</div>

<div class="text-center">
    @using (Html.BeginForm("AddNewCustomers", "CreateDB", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.ValidationSummary(true)

        <fieldset>
            <label for="amountOfDebtors">Amount of debtors</label><br />
            <input type="text" name="amountOfDebtors" /><br />

            <label for="amountOfCreditors">Amount of investors</label><br />
            <input type="text" name="amountOfCreditors" /><br /><br />

            <label for="updateDebtors">Refresh debtors?</label><br />
            <input type="checkbox" name="updateDebtors" /><br /><br />

            <label for="updateCreditors">Refresh investors?</label><br />
            <input type="checkbox" name="updateCreditors" /><br/><br/>

            <input type="submit" value="Submit" class="btn btn-success" />
        </fieldset>
    }
</div>

<div>
    <table class="table table-responsive table-striped">
        <thead>
            <tr>
                <th>Investors</th><th>Debtors</th><th>Transactions</th><th>Associations</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>@Model.AmountOfCreditors</td><td>@Model.AmountOfDebtors</td><td>@Model.AmoountOfTransactions</td><td>@Model.AmountOfAssociations</td>
            </tr>
        </tbody>
    </table>
</div>
